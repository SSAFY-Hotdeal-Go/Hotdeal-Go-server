<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.budge.hotdeal_go.model.mapper.NoticeMapper">

	<sql id="search">
		<if test="keyword != null and keyword != ''">
			and title like concat('%', #{keyword}, '%')
		</if>
	</sql>

	<select id="getNoticeList" parameterType="map" resultType="NoticeDto">
		select no, title, content, hit,
		register_time, member_no
		from notice
		where 1=1
		<include refid="search"></include>
		order by no desc
		limit #{start}, #{size}
	</select>

	<select id="getTotalNoticeCount" parameterType="map"
		resultType="int">
		select count(no)
		from notice
		where 1=1
		<include refid="search"></include>
	</select>

</mapper>